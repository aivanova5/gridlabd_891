// remove static load
#if LOADS==yes
#debug Converting area ${AREA} static load ${LOADID} phase ${PHASE} to ${COUNT} houses
modify ${FEEDER}_load_${LOADID}_${PHASE}.groupid area_${AREA};
modify ${FEEDER}_load_${LOADID}_${PHASE}.constant_power_1 0+0j;
modify ${FEEDER}_load_${LOADID}_${PHASE}.constant_power_2 0+0j;
modify ${FEEDER}_load_${LOADID}_${PHASE}.constant_power_12 0+0j;
modify ${FEEDER}_load_${LOADID}_${PHASE}.constant_current_1 0+0j;	
modify ${FEEDER}_load_${LOADID}_${PHASE}.constant_current_2 0+0j;	
modify ${FEEDER}_load_${LOADID}_${PHASE}.constant_current_12 0+0j;	
modify ${FEEDER}_load_${LOADID}_${PHASE}.constant_impedance_1 0+0j;	
modify ${FEEDER}_load_${LOADID}_${PHASE}.constant_impedance_2 0+0j;	
modify ${FEEDER}_load_${LOADID}_${PHASE}.constant_impedance_12 0+0j;	

#define XLOAD=yes
#else
#ifdef MYSQL_AMI
object player {
	parent ${FEEDER}_load_${LOADID}_${PHASE};
	connection sce;
	table ami;
	property "constant_power_12";
	query "SELECT adddate(record_date,interval hour_id+utc_offset hour) as t, energy_value as constant_power_12 FROM sce.ami WHERE customer_id = \"1252657E\" and adddate(record_date,interval hour_id hour) between '${starttime/ UTC/}' and '${stoptime/ UTC/}' ORDER BY t";
}
#endif
#endif

// add solar panel installation rank
#if SOLAR==yes
