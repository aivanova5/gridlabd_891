#ifdef XLOAD
// load/solar connection
object triplex_meter:..${COUNT} { 
	name `meter_{SEQ_CUSTID:INC}`;
	groupid ${FEEDER}_load_${LOADID};
	parent ${FEEDER}_load_${LOADID}_${PHASE};
	phases ${PHASE}S;
	nominal_voltage 120;
	latitude (${FEEDER}_load_${LOADID}_${PHASE}.latitude);
	longitude (${FEEDER}_load_${LOADID}_${PHASE}.longitude);
#if LOADS==yes
	object house { 
		floor_area random.triangle(1000,2000);
		name `house_{SEQ_CUSTID}`;
	}; 
#endif
